@model IEnumerable<GridDataObjectViewModel>

    @{
    ViewData["Title"] = "Index";
    }


    @(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(m => m.Name).Titled("Name");
        columns.Add(m => m.Price).Titled("Price").Formatted("C");
        columns.Add(m => m.Description).Titled("Description");
        columns.Add(m => m.Features).Titled("Features").RenderedAs(m => Html.Raw(m.Features)); 
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
    )

    <script src="~/Scripts/MvcGrid/mvc-grid.js"></script>
    <script>
        [].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
            new MvcGrid(element);
        });
    </script>
